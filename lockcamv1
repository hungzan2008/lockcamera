local fov = 25 -- ğŸ¯ KÃ­ch thÆ°á»›c hÃ¬nh trÃ²n (cÃ³ thá»ƒ chá»‰nh)
local FOVEnabled = false -- Tráº¡ng thÃ¡i Aimlock (táº¯t máº·c Ä‘á»‹nh)

local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local Players = game:GetService("Players")
local Cam = game.Workspace.CurrentCamera

-- ğŸ“Œ Táº¡o GUI
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
local AimButton = Instance.new("TextButton", ScreenGui)

-- ğŸ”˜ CÃ i Ä‘áº·t nÃºt ON/OFF
AimButton.Size = UDim2.new(0, 100, 0, 50)
AimButton.Position = UDim2.new(0.8, 0, 0.8, 0)
AimButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
AimButton.Text = "OFF"
AimButton.TextSize = 20
AimButton.TextColor3 = Color3.fromRGB(255, 255, 255)
AimButton.Font = Enum.Font.SourceSansBold
AimButton.BorderSizePixel = 2
AimButton.BorderColor3 = Color3.fromRGB(255, 255, 255)
AimButton.Parent = ScreenGui
AimButton.Draggable = true -- KÃ©o nÃºt Ä‘i báº¥t ká»³ Ä‘Ã¢u

-- ğŸ¯ HÃ¬nh trÃ²n FOV chá»‰ cÃ³ viá»n
local FOVring = Drawing.new("Circle")
FOVring.Visible = false
FOVring.Thickness = 3 -- ğŸ”¥ Äá»™ dÃ y viá»n
FOVring.Color = Color3.fromRGB(128, 0, 128) -- ğŸ¨ MÃ u tÃ­m
FOVring.Filled = false -- âŒ KhÃ´ng cÃ³ nhÃ¢n bÃªn trong
FOVring.Transparency = 1
FOVring.Radius = fov
FOVring.Position = Cam.ViewportSize / 2

-- ğŸ“Œ Báº­t/táº¯t Aimlock báº±ng nÃºt
AimButton.MouseButton1Click:Connect(function()
    FOVEnabled = not FOVEnabled

    if FOVEnabled then
        FOVring.Visible = true
        AimButton.Text = "ON"
        AimButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
    else
        FOVring.Visible = false
        AimButton.Text = "OFF"
        AimButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    end
end)

-- ğŸ”„ Cáº­p nháº­t vá»‹ trÃ­ hÃ¬nh trÃ²n FOV
RunService.RenderStepped:Connect(function()
    if FOVEnabled then
        FOVring.Position = Cam.ViewportSize / 2
    end
end)
